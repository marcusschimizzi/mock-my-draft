{
  "name": "main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/main/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/main",
        "outputPath": "dist/apps/main",
        "tsConfig": "apps/main/tsconfig.json"
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "main:build",
        "dev": true
      },
      "configurations": {
        "production": {
          "dev": false,
          "buildTarget": "main:build:production"
        },
        "development": {
          "dev": true,
          "buildTarget": "main:build:development"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/main/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/main/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["frontend"],
  "implicitDependencies": ["@mock-my-draft/visualizations"]
}
